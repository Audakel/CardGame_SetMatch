<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.SetCardGamev2.TabMatchismo"
    android:background="#ff2b671e">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/activityView2"
        android:singleLine="false"
        android:paddingLeft="50dp"
        android:padding="10dp"
        android:textColor="#c8ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-Deal"
        android:id="@+id/redrawButton"
        android:textSize="13dp"
        android:background="#ffb2ffe2"
        android:onClick="drawDeckButton"
        android:layout_gravity="right|bottom"
        android:textColor="#ff1b2d25"
        android:padding="5dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Score: 0"
        android:id="@+id/scoreView"
        android:textColor="#96ffffff"
        android:padding="5dp"
        android:layout_gravity="left|bottom"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Flips: 0"
        android:id="@+id/flipCount"
        android:textColor="#96ffffff"
        android:layout_gravity="bottom|left"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="5dp"
        android:textStyle="bold|italic" />

    <TextView
